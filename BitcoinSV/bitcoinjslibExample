const bitcoin = require('bitcoinjs-lib');
const BITCOINSVTESTNET = {
    messagePrefix: '\x19BitcoinSV Testnet Signed Message:\n',
    bech32: 'ltc',
    bip32: {
        public: 0x019da462,
        private: 0x019d9cfe,
    },
    pubKeyHash: 0x30,
    scriptHash: 0x32,
    wif: 0xb0,
};


const keyPair = bitcoin.ECPair.makeRandom({ network: BITCOINSVTESTNET });
const { address } = bitcoin.payments.p2pkh({
    pubKey: keyPair.publicKey,
    network: BITCOINSVTESTNET,
});

console.log(address);